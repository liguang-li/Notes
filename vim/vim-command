%		//{,[,(

:s/old/new	//replace the first old with new in the current line
:s/old/new/g 	//replace the old with new in the current line
:%s/old/new/g	//replace the old with new in the file

:!shellcommand	//run the external shell command

gd		//goto the defination of the variable

