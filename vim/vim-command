<ctrl> + i	//

<esc>
:q!
:wq

x		//delete the current character
dw		//delete the current word
de		//
d$		//delete to the end of the current line
dd		//delete the current line
Ndd		//delete N line


i		//insert
A		//insert in the end of the current line
r		//change the current character
o		//open a new line and enter the insert mode

u		//revert
<ctrl> + r	//cancel the revert

